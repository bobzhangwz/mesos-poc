apiVersion: v1
kind: ReplicationController
metadata:
  name: mysql-master
  labels:
    name: mysql-master
spec:
  replicas: 1
  selector:
    name: mysql-master
  template:
    metadata:
      labels:
        name: mysql-master
    spec:
      containers:
        - image: peterwang115/mysql-master:0.0.2
          name: mysql-master
          resources:
            limits:
              cpu: 100m
              memory: 200Mi
          env:
            - name: MYSQL_ROOT_PASSWORD
              value: "123456"
          ports:
            - containerPort: 3306
              name: mysql-master
          volumeMounts:
            - name: mysql-master-storage
              mountPath: /var/lib/mysql
      volumes:
        - name: mysql-master-storage
          cephfs:
            monitors: {{ceph_mon_addrs}}
            user: admin
            secretRef:
              name: ceph-secret
            readOnly: false
          # rbd:
          #   pool: rbd
          #   image: mysql
          #   user: admin
          #   keyring: /etc/ceph/keyring
          #   secretRef:
          #     name: ceph-secret
          #   fsType: ext4
          #   readOnly: false
          #   monitors: {{ceph_mon_addrs}}
          # hostPath:
          #   path: /var/mysql/master
          # persistentVolumeClaim:
          #   claimName: cephpvc
---
apiVersion: v1
kind: Service
metadata:
  labels:
    name: mysql-master
  name: mysql-master
spec:
  ports:
    - port: 3306
  selector:
    name: mysql-master
