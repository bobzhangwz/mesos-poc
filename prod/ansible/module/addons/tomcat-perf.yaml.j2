apiVersion: v1
kind: ReplicationController
metadata:
  name: tomcat-perf
spec:
  replicas: 1
  selector:
    app: tomcat-perf
  template:
    metadata:
      name: tomcat-perf
      labels:
        app: tomcat-perf
    spec:
      containers:
      - name: tomcat-perf
        image: official/tomcat
        ports:
        - containerPort: 8080
        resources:
          limits:
            cpu: 100m
            memory: 256Mi
---
apiVersion: v1
kind: Service
metadata:
  name: tomcat-perf
  labels: 
    app: tomcat-perf
spec:
  type: NodePort
  selector:
    app: tomcat-perf
  ports:
  - port: 80
    targetPort: 8080
    nodePort: 30088
